{
    "name": "Add Bookmark",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "bookmarks",
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "js": ["script.js"],
            "matches": [
                "https://developer.chrome.com/docs/extensions/*",
                "https://developer.chrome.com/docs/webstore/*"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16s.png",
        "32": "icons/icon32s.png",
        "48": "icons/icon48s.png",
        "128": "icons/icon128s.png"
    },
    "options_page": "options/options.html",
    "background": {
        "service_worker": "background.js"
    }
}